/* pages/release/release.wxss */
#registrationInformationBox{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 49px;
  right: 0;
}
#registrationInformationBox .required{
  width: 100%;
  height:287px;

}
#registrationInformationBox .required .requiredItem,#registrationInformationBox .selection  .requiredItem{
  width: 96%;
  height: 37px;
  line-height: 37px;
  margin: 0 2%;
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(149,149,149,1);
}
#registrationInformationBox .required .requiredItem1,#registrationInformationBox .selection  .requiredItem1{
  width: 100%;
  padding: 0 2%;
  height: 49px;
  border-bottom: 1px solid #D7D7D7;
  background:rgba(255,255,255,1);
  box-shadow:0px -1px 0px 0px rgba(223,223,223,1);
  line-height: 49px;
  box-sizing: border-box;
  position: relative;
}
#registrationInformationBox .required .requiredItem1 text:nth-child(1),#registrationInformationBox .selection  .requiredItem1 text:nth-child(1){
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
#registrationInformationBox .required .requiredItem1 .input:nth-child(2),#registrationInformationBox .selection  .requiredItem1 .input:nth-child(2){
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  max-width: 160px;
  position: absolute;
  right: 0;
  top: 0;
  margin-right:20px; 
  display: inline-block;
  line-height: 49px;
  height: 49px;
  text-align: right
}
#registrationInformationBox .required .requiredItem1 image,#registrationInformationBox .selection  .requiredItem1 image{
  display: inline-block;
  width: 13px;
  height: 19px;
  position: absolute;
  right: 10px;
  top: 15px;
}

#registrationInformationBox .required .requiredItem2{
  width: 100%;
  padding: 0 2%;
  height: 49px;
  border-bottom: 1px solid #D7D7D7;
  background:rgba(255,255,255,1);
  box-shadow:0px -1px 0px 0px rgba(223,223,223,1);
  line-height: 49px;
  box-sizing: border-box;
}
#registrationInformationBox .required .requiredItem2 input{
  height: 49px;
  line-height: 49px;
}
#registrationInformationBox .selection{
  width: 100%;
  margin-bottom: 20px;
}
/* --------------foot---------------------- */
#registrationInformationFoot{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 49px;
  background: #050509;
  text-align: center;
  line-height: 49px;
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  cursor: pointer;
}
.checkbox{
  display: block;
  margin-bottom: 10px;
}