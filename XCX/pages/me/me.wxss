/* pages/me/me.wxss */
.meBox {
  width: 100%;
  box-sizing: border-box;
  position: relative
}
 .userinfo{
  width: 100%;
  height: 168px;
  position: relative;
  
}
.bgImge{
  display: inline-block;
  height: 100%;
  width: 100%;
  filter: blur(15px);
  opacity:0.3;
}
.userinfoImage{
  width: 65px;
  height: 65px;
  border-radius: 100%;
  position: absolute;
  left: 40%;
  top: 35px;
 
}
.userinfo-nickname{
  position: absolute;
  left: 0;
  top: 110px;
  display: block;
  width: 100%;
  text-align: center; 
  height:16px;
  font-size:17px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(5,5,9,1);
}
.me_ul{
    width: 100%;
    background:rgba(255,255,255,0.3);
    display: flex;
    border-bottom: 1px solid #EEEEEE;
  }
.me_li{
      flex: 1;
      text-align: center;
      padding: 10px 0;
      font-family:PingFangSC-Regular;
      font-weight:400;
      color:rgba(102,102,102,1);
      font-size:12px;
    }
.me_span{
         font-size:15px;
        color:rgba(5,5,9,1);
}

  .userinfo_set{
      width:100px;
      height: 32px;
      background:rgba(0,0,0,0.2);
      border-radius:16px;
      position: absolute;
      right: -15px;
      top: 48px;
      line-height: 32px;
      text-indent: 5px;
      font-size:12px;
      font-family:PingFangSC-Regular;
      font-weight:400;
      color:rgba(255,255,255,1);
  }
   .userinfo_set image{
        display: inline-block;
        width: 13px;
        height: 10px;
   }
   .Me_tab{
     width: 100%;
     background: #ffffff;
     display: flex;
     height: 40px
   }
    .Me_li{
     flex: 1;
   }
   .Me_li text{
      display: inline-block;
      font-size:14px;
      font-family:PingFangSC-Regular;
      font-weight:400;
      color:rgba(153,153,153,1);
      height: 38px;
      line-height: 38px;
   }
     .Me_span0{
        float: right;
        margin-right: 20px;
   }
    .Me_span1{
      margin-left: 20px;
    
   }
   .Me_li text.active{
      color:rgba(5,5,9,1);
      border-bottom: 2px solid #000000;
   }
 
 .Me_draft{
   width: 100%;
 }