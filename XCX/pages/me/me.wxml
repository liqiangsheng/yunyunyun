<!--pages/me/me.wxml-->
<view class='meBox'>
  <view class="userinfo">
      <image class='bgImge' src='{{bgImge}}'></image>
      <block>
        <image bindtap="bindViewTap" class="userinfoImage" src="{{userInfo.header}}" mode="cover" bindtap='loginBnt'></image>
        <text class="userinfo-nickname">{{userInfo.name}}</text>
      </block> 
    </view>

     <view class='userinfo_set' bindtap='setClick'>
            个人资料 <image src="../../images/goBack.png" alt=""></image>
     </view>

     <view class="me_ul" wx:if="{{tabListBool}}">
        <view class='me_li' wx:for="{{tabList}}" bindtap='myfollowBnt' key='{{index}}' data-item='{{item}}'>
          <view class='me_span'>
            {{item.num}}
          </view>
          {{item.name}}
      </view>

   </view>

</view>

