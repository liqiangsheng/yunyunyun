<!--pages/me/me.wxml-->
<scroll-view class='meBox' scroll-y >
  <view class="userinfo">
      <image class='bgImge' src='{{bgImge}}' bindtap='loginBnt'></image>
      <block>
        <image class="userinfoImage" src="{{userInfo.header}}" mode="cover" bindtap='loginBnt'></image>
        <text class="userinfo-nickname">{{userInfo.name}}</text>
      </block> 
    </view>

     <view class='userinfo_set' bindtap='setClick'>
            消息 <image src="../../images/goBack.png" alt=""></image>
     </view>

     <view class="me_ul" wx:if="{{tabListBool}}">
        <view class='me_li' bindtap='myfollowBnt' data-item='1'>
            <view class='me_span'>
              {{objList.care_count>10000?objList.care_count/10000+'万':objList.care_count}}
            </view>
            关注
       </view>
         <view class='me_li' bindtap='myfollowBnt' data-item='2'>
            <view class='me_span'>
               {{objList.cared_count>10000?objList.cared_count/10000+'万':objList.cared_count}}
            </view>
            粉丝
       </view>
         <view class='me_li' bindtap='myfollowBnt' data-item='3'>
            <view class='me_span'>
                {{objList.laud_count>10000?objList.laud_count/10000+'万':objList.laud_count}}
            </view>
            点赞
       </view>
         <view class='me_li' bindtap='myfollowBnt' data-item='4'>
            <view class='me_span'>
               {{objList.favorite_count>10000?objList.favorite_count/10000+'万':objList.favorite_count}}
            </view>
           收藏
       </view>
         <view class='me_li' bindtap='myfollowBnt' data-item='5'>
            <view class='me_span'>
               {{objList.comment_count>10000?objList.comment_count/10000+'万':objList.comment_count}}
            </view>
            评论
       </view>
     
   </view>
    <!-- 原创，草稿 -->
     <view class='Me_tab'>
        <view wx:for="{{meTab}}" class='Me_li' bindtap='Me_tabClick' data-index='{{index}}' wx:key=''>
           <text class='{{"Me_span"+index}} {{meTabIndex==index?"active":""}}'>{{item}}</text>
        </view>
    </view>
      <!--,//原创 草稿组件-->
    <view  class="Me_draft">
        <!-- <Original class='Me_Original' prop-a="{{imgList}}" wx:if="{{meTabIndex==0}}"></Original> -->
        <view wx:if="{{meTabIndex==0}}">
           <view class='componentsBox_Show' wx:if='{{listData.length<=0}}'>
                <image src="../../images/yuanchuang.png"></image>
                <view>你还没有进行任何创作哦～</view>
              </view>
              <view class='componentsBox' wx:else>
                <view class='fall-container'>
                  <!-- 左边一列 -->
                  <view class='fall-left'>
                    <block wx:for="{{leftList}}" wx:key="{{item.id}}">
                      <!--瀑布流内容卡片-->
                      <!-- <template is='goodsCard' data="{{data:item}}" /> -->
                      <image 
                        class='card-img' 
                        mode='aspectFill' 
                        style='width:{{item.itemWidth}}px;height:{{item.itemHeight}}px;margin-top:8px;' 
                        src='{{item.cover.url}}' 
                        bindtap='goDetail' data-id="{{item.id}}"
                        lazy-load>
                      </image>
                        <view class='img-infoBox' bindtap='goDetail' data-id="{{item.id}}">
                          <view class='img-infoBoxInfo'>{{item.title}}</view>
                              <view class="img-info">
                                <view class="img-info_li1"><image src="{{item.authorInfo.ownerUrl?item.authorInfo.ownerUrl:'../../images/defultphoto.png'}}" alt=""></image></view>
                                <view class="img-info_li2">{{item.authorInfo.name}}</view>
                                <view class="img-info_li3"><image src="../../images/dianzan1.png" alt=""></image></view>
                                <view class="img-info_li4">{{item.laudedCount}}</view>
                              </view>
                      </view>
                    </block>
                  
                  </view>
                  <!--右边一列 -->
                  <view class='fall-right'>
                    <block wx:for="{{rightList}}" wx:key="{{item.id}}" bindtap='goDetail' data-id="{{item.id}}">
                      <!--瀑布流内容卡片-->
                      <!-- <template is='goodsCard' data="{{data:item}}" /> -->
                      <image 
                        class='card-img' 
                        mode='aspectFill' 
                        bindtap='goDetail' data-id="{{item.id}}"
                        style='width:{{item.itemWidth}}px;height:{{item.itemHeight}}px;margin-top:8px;' 
                        src='{{item.cover.url}}' 
                        lazy-load>
                      </image>
                      <view class='img-infoBox' bindtap='goDetail' data-id="{{item.id}}">
                          <view class='img-infoBoxInfo'>{{item.title}}</view>
                              <view class="img-info">
                                <view class="img-info_li1"><image src="{{item.authorInfo.ownerUrl?item.authorInfo.ownerUrl:'../../imgages/defultphoto.png'}}" alt=""></image></view>
                                <view class="img-info_li2">{{item.authorInfo.name}}</view>
                                <view class="img-info_li3"><image src="../../images/dianzan1.png" alt=""></image></view>
                                <view class="img-info_li4">{{item.laudedCount}}</view>
                              </view>
                      </view>
                    </block>
                  </view>
                </view>
                <view bindtap='moreTap' class='more'>
                      {{message}}
                </view>
              </view>
        </view>
        <Draft wx:if="{{meTabIndex==1}}"></Draft>
    </view>
    
  

</scroll-view>

