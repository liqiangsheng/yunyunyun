/* pages/news/news.wxss */
.multiActivityBox{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 49px;
}
.multiActivityBoxHeader{
  width: 94%;
  padding: 20px 3%;
  background: #fff;
  height: 80px;
  display: flex;
  margin-top: 1px;
}
.multiActivityBoxHeader image{
  width: 80px;
  height: 80px;
  display: inline-block;
}
.multiActivityBoxHeader view{
  flex: 1;
}
.multiActivityBoxHeader view view:nth-child(1){
  height: 30px;
  width: 100%;
  line-height: 30px;
  font-size:14px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(5,5,9,1);
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  text-indent: 10px;
}
.multiActivityBoxHeader view view:nth-child(2){
  width:100%;
  height:25px;
  font-size:14px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(254,95,95,1);
  line-height:25px;
  text-indent: 10px;
}
.multiActivityBoxHeader view view:nth-child(3){
  width: 100%;
  height: 25px;
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:25px;
  padding-left:10px; 
}
.multiActivityBoxHeader view view:nth-child(3) image,.multiActivityBoxHeader view view:nth-child(4) image{
  display: inline-block;
  width: 11px;
  height: 11px

}
